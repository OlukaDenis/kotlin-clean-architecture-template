<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pieme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pieme_blue</item>
        <item name="colorPrimaryVariant">@color/pieme_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pieme_accent</item>
        <item name="colorSecondaryVariant">@color/pieme_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="PiemeButton" parent="Widget.MaterialComponents.Button" >
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:inset">@dimen/spacing_0</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="PrimaryButton" parent="PiemeButton">
        <item name="android:background">@drawable/pieme_btn_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:inset">@dimen/spacing_0</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="strokeColor">@color/pieme_blue</item>
        <item name="cornerRadius">@dimen/spacing_50</item>
        <item name="android:textColor">@color/pieme_blue</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>