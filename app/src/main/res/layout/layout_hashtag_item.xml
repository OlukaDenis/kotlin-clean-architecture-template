<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtvHashtagName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/spacing_8"
        android:layout_marginStart="@dimen/default_spacing"
        android:textSize="@dimen/font_18"
        tools:text="#Denis"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtvPiesNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mtvHashtagName"
        app:layout_constraintStart_toStartOf="@id/mtvHashtagName"
        android:textSize="@dimen/default_size"
        tools:text="1.5k Pies"
        android:textColor="@color/gray_text"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_more_horiz"
        android:tint="@color/gray_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/mtvHashtagName"
        android:layout_marginEnd="@dimen/spacing_8" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_bg"
        android:layout_marginTop="@dimen/spacing_5"
        app:layout_constraintTop_toBottomOf="@+id/mtvPiesNum"/>

</androidx.constraintlayout.widget.ConstraintLayout>